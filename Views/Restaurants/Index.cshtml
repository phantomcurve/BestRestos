@using BestRestos.Models;
@model List<BestRestos.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

<ul>
  @foreach(Restaurant restaurant in Model)
  {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
      //add breed, doa, and gender
  }
</ul>

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("See all restaurants", "Index", "Restaurants")</p> 
<p>@Html.ActionLink("See all cuisines", "Index", "Cuisines")</p>

